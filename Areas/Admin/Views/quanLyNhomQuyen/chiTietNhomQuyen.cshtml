@model WEBSITE_TRAVELBOOKING.Models.SysRole;
@{
    // Layout = "_AdminLayout";
    ViewData["TitleAdmin"] = "Chi tiết nhóm quyền";
    var getRole = ViewBag.getRole as WEBSITE_TRAVELBOOKING.Models.SysRole;
}

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@ViewData["TitleAdmin"]</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form id="dataForm" method="post" action="xoaNhomQuyen" novalidate>
        <input type="number" name="Id" value="@Model.Id" hidden />

        <div class="row">
            <div class="col-12">
                <div class="mb-3">
                    <label class="form-label" for="validationCustom01">Tên nhóm quyền</label>
                    <input type="text" class="form-control" name="Name" value="@Model.Name" readonly>
                    <div class="invalid-feedback"></div>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
    @{
        if (Model.SysUsers.Count > 0)
        {
            <button type="button" class="btn bg-danger-subtle text-danger waves-effect text-start" onclick="alert('Không thể xóa nhóm quyền, Hiện tại có nhiều tài khoản đang dùng nhóm quyền này!!')">
                Xóa nhóm quyền
            </button>
        }
        else
        {
            <button type="button" data-toggle="ajax-modal" data-url="@Url.Action("xoaNhomQuyen", new { id = Model.Id, area = "Admin" })" class="btn bg-danger-subtle delete text-danger waves-effect text-start">
                Xóa nhóm quyền
            </button>
        }
    }
</div>
