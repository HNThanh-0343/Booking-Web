@model X.PagedList.IPagedList<WEBSITE_TRAVELBOOKING.Models.SysBooking>
@using WEBSITE_TRAVELBOOKING.Helper;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Core.Common
@using X.PagedList.Web.Common;
@using WEBSITE_TRAVELBOOKING.Models
@{
    var listUser = ViewBag.listUser as List<SysGuest>;
    var listRoom = ViewBag.listRoom as List<SysRoom>;
    var listHotel = ViewBag.listHotel as List<SysHotel>;
    var typeRoom = ViewBag.typeRoom as List<CatTypeRoom>;
    var ruleAction = ViewData["RuleAll"] as ModelsAndRole;
}

<div class="table-responsive">
    <table class="table table-centered w-100 dt-responsive nowrap">
        <thead class="table-light">
            <tr>
                <th>Tên khách hàng</th>
                <th>Tên khách sạn</th>
                <th>Tên phòng</th>
                <th>Loại phòng</th>
                <th>Ngày nhận phòng</th>
                <th>Ngày trả phòng</th>
                <th>Ngày đặt phòng</th>
                <th>Tổng hóa đơn (VND)</th>
                <th>Trạng thái</th>
                @if (ruleAction != null && (ruleAction.IsEdit == true || ruleAction.IsDelete == true))
                {
                    <th>Hàng động</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var name = item.FullNameGuest;
                var hotel = "";
                var type = "";
                if (string.IsNullOrEmpty(item.FullNameGuest))
                {
                    name = listUser.FirstOrDefault(h => h.Id == item.IdUser)?.Name;
                }
                var room = listRoom.FirstOrDefault(h => h.Id == item.BookingItemId);
                if (room != null)
                {
                    hotel = listHotel.FirstOrDefault(h => h.Id == room.IdHotel)?.Name;
                    type = typeRoom.FirstOrDefault(h => h.Id == room.TypeRoom)?.Name;
                }
                <tr>
                    <td>
                        @name
                    </td>
                    <td>@hotel</td>
                    <td>@room?.Name</td>
                    <td>@type</td>
                    <td>@item.StartDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.EndDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.BookingDate?.ToString("dd/MM/yyyy")</td>
                    <td>@item.Price.ToString("0.##")</td>
                    <td>@(item.Status == 0 ? "Hủy đơn" : item.Status == 1 ? "Hoàn thành" : "Chờ thanh toán")</td>
                    <td>
                        <div class="table-action">
                            <a href="@Url.Action("chiTietDatPhong", "QuanLyKhachSan", new {id = item.Id, area = "Admin"})"
                               class="btn btn-success btn-sm" title="Chi tiết" data-toggle='modal' data-sizeModal="modal-xl">
                                <i class="mdi mdi-eye"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.Count > 0)
    {
        <div class="d-flex align-items-center justify-content-end py-1">
            @Html.PagedListPager(Model, page => Url.Action("childIndexDatPhong", new { page, area = "Admin", searchValue = ViewBag.searchValue, searchDate = ViewBag.searchDate }),
                     PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "DataTable" }))
        </div>
    }
</div>