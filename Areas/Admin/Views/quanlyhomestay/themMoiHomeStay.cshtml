@model WEBSITE_TRAVELBOOKING.Models.SysVilla;
@using WEBSITE_TRAVELBOOKING.Helper;
@using WEBSITE_TRAVELBOOKING.Models;
@{
    ViewData["TitleAdmin"] = "Thêm mới homestay";
    var listUser = ViewBag.listUser as List<WEBSITE_TRAVELBOOKING.Models.SysUser>;
    var getAccount = Account.GetAccount();
    var TienNghi = ViewBag.TienNghi as List<CatAminitieseRoom>;
    var listContry = ViewBag.CatContry as List<CatContry>;
}
@*Thư viện soạn thảo*@
<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.css" rel="stylesheet" />
<style>
    .ts-dropdown {
        background-color: white !important;
        opacity: 1 !important;
        visibility: visible !important;
        z-index: 9999;
    }
</style>
<div class="modal-header">
    <h5 class="modal-title" id="scrollableModalTitle">@ViewData["TitleAdmin"]</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true"></button>
</div>
<div class="modal-body">
    <form class="needs-validation" id="dataForm" method="post" enctype="multipart/form-data" novalidate>
        <div class="row">
            <div class="col-12">
                <div class="mb-3">
                    <label class="form-label" for="validationCustom01">Tên homestay <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="Name" placeholder="Tên homestay" required>
                    <div class="invalid-feedback">
                        Vui lòng nhập đầy đủ thông tin.
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="mb-3">
                    <label class="form-label" for="validationCustom03">Chủ sở hữu <span class="text-danger">*</span></label>
                    <select class="form-select select2" data-toggle="select2" id="" name="IdUser" required>
                        <option value="">Chủ sở hữu</option>
                        @foreach (var item in listUser)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <div class="invalid-feedback">
                        Vui lòng chọn chủ sở hữu.
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="mb-3">
                    <label class="form-label" for="validationCustom05">Địa chỉ <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="LocalText" placeholder="Địa điểm" required>
                    <div class="invalid-feedback">
                        Vui lòng nhập đầy đủ thông tin.
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="mb-3">
                    <label class="form-label" for="validationCustom03">Tỉnh thành <span class="text-danger">*</span></label>
                    <select class="form-select select2" data-toggle="select2" id="IdContry" name="IdContry" required>
                        <option value="">Chọn tỉnh thành</option>
                        @foreach (var item in listContry)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <div class="invalid-feedback">
                        Vui lòng chọn tỉnh thành.
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="mb-3">
                    <label class="form-label" for="validationCustom04">Giá (VNĐ) <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" id="Price" name="PriceMin" placeholder="" required>
                    <div class="invalid-feedback">
                        Vui lòng nhập đầy đủ thông tin.
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="mb-3">
                    <label class="form-label">Đường dẫn iframe Google Maps</label>
                    <input type="text" class="form-control" id="iframeInput" name="LocalIframe" placeholder="Dán đường dẫn iframe Google Maps vào đây" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Vị trí bản đồ</label>
                    <div id="iframePreviewContainer" class="border rounded" style="height: 220px; overflow: hidden;">
                        <iframe id="iframePreview" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" style="width: 100%; height: 100%; border: 0;"></iframe>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="mb-3">
                    <label class="form-label" for="validationCustom02">Số điện thoại <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="Phone" name="Phone" placeholder="" required>
                    <div class="invalid-feedback" id="PhoneError">
                        Vui lòng nhập đầy đủ thông tin.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="validationCustom04">Số lượng phòng <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" name="TotalRoom" placeholder="" required>
                    <div class="invalid-feedback">
                        Vui lòng nhập đầy đủ thông tin.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="validationCustom04">Số lượng giường <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" name="TotalBed" placeholder="" required>
                    <div class="invalid-feedback">
                        Vui lòng nhập đầy đủ thông tin.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="validationCustom04">Số lượng khách <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" name="TotalGuest" placeholder="" required>
                    <div class="invalid-feedback">
                        Vui lòng nhập đầy đủ thông tin.
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="mb-3">
                    <label class="form-label">Trạng thái <span class="text-danger">*</span></label>
                    <select class="form-select" name="Status">
                        <option value="true">Kích hoạt</option>
                        <option value="false">Chưa kịch hoạt</option>
                    </select>
                </div>
            </div>
            <div class="col-6">
                <div class="mb-3">
                    <label class="form-label">Homestay nổi bật <span class="text-danger">*</span></label>
                    <select class="form-select" name="Featured">
                        <option value="true">Có</option>
                        <option value="false">Không</option>
                    </select>
                </div>
            </div>
            <div class="col-12">
                <div class="mb-3">
                    <label class="form-label" for="validationCustom02">Tiện nghi <span class="text-danger">*</span></label>
                    <select class="form-select" id="Amenities" name="Amenities" multiple required>
                        @foreach (var item in TienNghi)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Mô tả <span class="text-danger">*</span></label>
                    <textarea class="form-control" id="summernote" name="Description" required></textarea>
                    <div class="invalid-feedback">
                        Vui lòng nhập đầy đủ thông tin.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Điều khoản luật lệ <span class="text-danger">*</span></label>
                    <textarea class="form-control" id="summernote4" name="HouseRules" required></textarea>
                    <div class="invalid-feedback">
                        Vui lòng nhập đầy đủ thông tin.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="example-fileinput" class="form-label">Hình ảnh</label>
                    <input type="file" name="postedFile" class="form-control" accept="image/*" multiple>
                </div>
                
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
    <button type="button" data-toggle="ajax-modal" data-url="@Url.Action("themMoiHomeStay", new { area = "Admin" })" class="btn bg-success-subtle create text-success waves-effect text-start">
        Cập nhật
    </button>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>
<script>
    $(document).ready(function () {
        const select = document.getElementById('Amenities');
        if (select) {
            new TomSelect(select, {
                plugins: ['remove_button'],
                placeholder: 'Chọn tiện nghi'
            });
        }
        $('#summernote').summernote({
            height: 200 // chiều cao tính bằng pixel
        });
        $('#summernote2').summernote({
            height: 200 // chiều cao tính bằng pixel
        });
        $('#summernote3').summernote({
            height: 200 // chiều cao tính bằng pixel
        });
        $('#summernote4').summernote({
            height: 200 // chiều cao tính bằng pixel
        });

        // Hiển thị bản đồ
        $('#iframeInput').on('input', function () {
            var value = $(this).val();
            if (value && value.includes('iframe')) {
                // Trích xuất src trong iframe nếu người dùng dấn nguyên đoạn iframe
                var srcMatch = value.match(/src\s*=\s*"(.*?)"/);
                var src = srcMatch ? srcMatch[1] : value;
                $('#iframePreview').attr('src', src);
                $('#iframePreviewContainer').show();
            } else if (value.includes("https://") && (value.includes("google.com/maps") || value.includes("maps.app.goo.gl"))) {
                // Nếu người dùng chỉ dán đường link chứa src
                $('#iframePreview').attr('src', value);
                $('#iframePreviewContainer').show();
            } else {
                $('#iframePreviewContainer').hide();
                $('#iframePreview').attr('src', '');
            }
        });

        // kiểm tra Số điện thoại
        var phoneInput = $('#Phone');
        var errorDiv = $('#PhoneError');
        // Chỉ cho phép nhâp số
        $('#Price').on('input', function () {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
        phoneInput.on('input', function () {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
        phoneInput.on('blur', function () {
            var value = this.value.trim();
            var isValid = /^\d{10,11}$/.test(value);

            if (!isValid) {
                phoneInput.addClass('is-invalid');
                errorDiv.text("Vui lòng nhập số điện thoại hợp lệ (10 đến 11 chữ số).").show();
            } else {
                phoneInput.removeClass('is-invalid');
                errorDiv.text("").hide();
            }
        });
    });
</script>