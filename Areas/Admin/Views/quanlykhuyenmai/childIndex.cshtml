@model X.PagedList.IPagedList<WEBSITE_TRAVELBOOKING.Models.SysPromotion>
@using WEBSITE_TRAVELBOOKING.Helper;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Core.Common
@using X.PagedList.Web.Common;
@using WEBSITE_TRAVELBOOKING.Models
@{
    var listUser = ViewBag.listUser as List<SysUser>;
    var ruleAction = ViewData["RuleAll"] as ModelsAndRole;
}

<div class="table-responsive">
    <table class="table table-centered w-100 dt-responsive nowrap">
        <thead class="table-light">
            <tr>
                <th>Khuyến mãi</th>
                <th>Ngày bắt đầu</th>
                <th>Ngày kết thúc</th>
                <th>Giảm giá</th>
                <th>Trạng thái</th>
                @if (ruleAction != null && (ruleAction.IsEdit == true || ruleAction.IsDelete == true))
                {
                    <th>Hàng động</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a class="text-dark" href="@Url.Action("chiTietKhuyenMai", new {id = item.Id, area = "Admin"})" data-toggle='modal' data-sizeModal="">@item.Name</a>
                    </td>
                    <td>@item.StartDate?.ToString("dd/MM/yyyy")</td>
                    <td>@item.EndDate?.ToString("dd/MM/yyyy")</td>
                    <td>@item.SaleOff @(item.Type == true ? "%" : "VNĐ")</td>
                    <td>@(item.Status == true ? "Kích hoạt" : "Chưa kích hoạt")</td>
                    <td>
                        <div class="table-action">
                            @{
                                if (ruleAction != null && ruleAction.IsEdit == true)
                                {
                                    <a href="@Url.Action("chinhSuaKhuyenMai", "quanlykhuyenmai", new {id = item.Id, area = "Admin"})"
                                       class="btn btn-warning btn-sm" title="Chỉnh sửa" data-toggle='modal' data-sizeModal="">
                                        <i class="mdi mdi-square-edit-outline"></i>
                                    </a>
                                }
                                if (ruleAction != null && ruleAction.IsDelete == true)
                                {
                                    <a href="@Url.Action("chiTietKhuyenMai", "quanlykhuyenmai", new {id = item.Id, area = "Admin"})"
                                       class="btn btn-danger btn-sm" title="Xóa" data-toggle='modal' data-sizeModal="">
                                        <i class="mdi mdi-delete"></i>
                                    </a>
                                }
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.Count > 0)
    {
        <div class="d-flex align-items-center justify-content-end py-1">
            @Html.PagedListPager(Model, page => Url.Action("childIndex", new { page, area = "Admin" }),
                     PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "DataTable" }))
        </div>
    }
</div>