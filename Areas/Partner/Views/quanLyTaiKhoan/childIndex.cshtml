@model X.PagedList.IPagedList<WEBSITE_TRAVELBOOKING.Models.SysUser>
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Core.Common
@using X.PagedList.Web.Common;

<div class="table-responsive">
    <table id="datatable-buttons" class="table table-sm table-centered w-100 dt-responsive nowrap">
        <thead class="table-light">
            <tr>
                @* <th>Avatar</th> *@
                <th>Tên người dùng</th>
                <th>Email</th>
                <th>Địa chỉ</th>
                <th>Nhóm quyền</th>
                <th>Trạng thái</th>
                <th class="text-center" width="120px">Hàng động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*    <td>
                        <a data-toggle='modal' data-sizeModal="false" href="@Url.Action("chiTietTaiKhoan", new {id = item.Id})">
                            <img src="@item.Avatar" alt="Avatar" class="img-fluid avatar-sm rounded-circle">
                        </a>
                    </td> *@
                    <td><a class="text-dark" href="@Url.Action("chiTietTaiKhoan", new {id = item.Id})">@item.Name</a></td>
                    <td>@item.Email</td>
                    <td>@item.Local</td>
                    <td>@item.IdRoleNavigation?.Name</td>
                    <td>@(item.Status == true ? "Kích hoạt" : "Chưa kích hoạt")</td>
                    <td class="text-center">
                        <div class="table-action">
                            <a data-toggle='modal' data-sizeModal="abc" class="btn btn-warning btn-sm" href="@Url.Action("chinhSuaTaiKhoan", new {id = item.Id})" title="Chỉnh sửa"><i class="mdi mdi-square-edit-outline"></i> </a>
                            <a data-toggle='modal' data-sizeModal="abc" class="btn btn-danger btn-sm" href="@Url.Action("chiTietTaiKhoan", new {id = item.Id})" title="Xóa"><i class="mdi mdi-delete"></i> </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @{
        if (Model.Count > 0)
        {
            <div class="d-flex align-items-center justify-content-end py-1">
                @Html.PagedListPager(Model, page => Url.Action("childIndex", new { page, searchValue = ViewBag.searchValue, IdRole = ViewBag.IdRole }),
                     PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "DataTable" }))
            </div>
        }
    }
</div>
