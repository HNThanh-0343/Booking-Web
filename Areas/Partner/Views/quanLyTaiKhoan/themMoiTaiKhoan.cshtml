@model WEBSITE_TRAVELBOOKING.Models.SysUser;
@{
    // Layout = "_AdminLayout";
    ViewData["TitleAdmin"] = "Thêm mới đối tác";
    var listRole = ViewBag.NhomQuyen as List<WEBSITE_TRAVELBOOKING.Models.SysRole>;
}

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@ViewData["TitleAdmin"]</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form id="dataForm" method="post" action="themMoiTaiKhoan" novalidate>
        <div class="row">
            <div class="col-12">             
                <div class="mb-3">
                    <label class="form-label" for="validationCustom01">Tên đối tác <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="Name" placeholder="Tên đối tác" required>
                    <div class="invalid-feedback"></div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="validationCustom02">Email <span class="text-danger">*</span></label>
                    <input type="email" class="form-control" name="Email" placeholder="Email đối tác" required>
                    <div class="invalid-feedback"></div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="validationCustom05">Địa chỉ <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="Local" placeholder="Địa chỉ đối tác" required>
                    <div class="invalid-feedback">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="validationCustom04">Mật khẩu <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" name="Password" placeholder="Mật khẩu" required>
                    <div class="invalid-feedback">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="validationCustom04">Nhóm quyền <span class="text-danger">*</span></label>
                    @Html.DropDownListFor(model => model.IdRole, new SelectList(ViewBag.NhomQuyen, "Id", "Name", Model.IdRole), "Chọn nhóm quyền", new { @class = "form-select m-input" })
                    <div class="invalid-feedback">
                    </div>
                </div>
            </div>            
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>    
    <button type="button" data-toggle="ajax-modal" data-url="@Url.Action("themMoiTaiKhoan")" class="btn bg-success-subtle create text-success waves-effect text-start">
        Thêm mới
    </button>
</div>