@section Scripts {
	<script>
		$("#loadKhuyenMai").load("/KhuyenMai/loadKhuyenMai");
			$(document).on("click", ".pagination a", function (e) {
			e.preventDefault();
			const url = $(this).attr("href");

			if (url) {
				$("#loadKhuyenMai").load(url);
			}
		});
	
			function showPromoName(viewType, id) {
			const btn = document.getElementById(`btn_${viewType}_${id}`);
			const name = document.getElementById(`name_${viewType}_${id}`);

			if (!btn || !name) return;

			// Hiện mã khuyến mãi
			btn.style.display = "none";
			name.style.display = "flex";
			name.style.opacity = "0";
			name.style.transform = "translateY(-10px)";

			setTimeout(() => {
				name.style.opacity = "1";
				name.style.transform = "translateY(0)";
			}, 10);

			// Ẩn lại sau 5 giây
			setTimeout(() => {
				name.style.opacity = "0";
				name.style.transform = "translateY(-10px)";
				setTimeout(() => {
					name.style.display = "none";
					btn.style.display = "block";
				}, 300);
			}, 5000);

			// Tự động copy khi vừa hiện mã
			const code = name.textContent.trim();
			navigator.clipboard.writeText(code)
				.then(() => {
					Swal.fire({
						icon: 'success',
						title: 'Đã sao chép!',
						text: `Mã "${code}" đã được sao chép vào clipboard.`,
						showConfirmButton: false,
						timer: 2000
					});
				})
				.catch(err => {
					console.error("Không thể sao chép", err);
					Swal.fire({
						icon: 'error',
						title: 'Lỗi',
						text: 'Không thể sao chép mã.',
					});
				});
		}

	</script>
}


