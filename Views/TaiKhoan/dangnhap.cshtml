<script>
    //1 register
    //2 forgot
    function getCode(type) {

        $("#emailaddress").prop("disabled", true);

        var email = $("#emailcanhan").val().trim();
        $.ajax({
            url: "SendEmailOTP",
            type: "GET",
            data: { toEmail: email, type: type },
            headers: {
                "X-Requested-With": "XMLHttpRequest"
            },
            success: function (res) {
                if (res.success) {

                    $("#emailaddress").prop("disabled", false);
                } else {
                    $("#emailaddress").prop("disabled", false);
                }
            },
            error: function () {
                $("#emailaddress").prop("disabled", false);

            }
        });
    }

</script>

