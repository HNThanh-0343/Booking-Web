@model WEBSITE_TRAVELBOOKING.Models.SysGuest
@using WEBSITE_TRAVELBOOKING.Helper
<style>
    .avatar-wrapper {
        position: relative;
        height: 150px;
        width: 150px;
        border-radius: 50%;
        overflow: hidden;
        box-shadow: 1px 1px 15px -5px black;
        transition: all 0.3s ease;
    }

        .avatar-wrapper:hover {
            transform: scale(1.05);
            cursor: pointer;
        }

            .avatar-wrapper:hover .profile-pic {
                opacity: 0.5;
            }

        .avatar-wrapper .profile-pic {
            height: 100%;
            width: 100%;
            transition: all 0.3s ease;
        }

        .avatar-wrapper .upload-button {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
        }

            .avatar-wrapper .upload-button .fa-arrow-circle-up {
                position: absolute;
                font-size: 50px;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                text-align: center;
                opacity: 0;
                transition: all 0.3s ease;
                color: #34495e;
            }

        .avatar-wrapper:hover .upload-button .fa-arrow-circle-up {
            opacity: 0.9;
        }
</style>
<div class="modal-header bg-primary text-white d-flex justify-content-center position-relative rounded-top">
    <h5 class="modal-title fw-bold mb-0" id="exampleModalLabel">
        Cập nhật thông tin @(!string.IsNullOrEmpty(Model.Name) ? Model.Name : "Khách hàng")
    </h5>
    <button type="button" class="close position-absolute" style="right: 20px; top: 45px; transform: translateY(-50%);" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true" class="text-white">&times;</span>
    </button>
</div>

<div class="modal-body p-4">
    <form method="post" asp-action="CapNhatThongTin" asp-controller="TrangChu" enctype="multipart/form-data">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="row mb-4">
            <!-- Avatar -->
            <div class="col-md-4 text-center">
                <div class="avatar-wrapper mx-auto">
                    <img class="profile-pic rounded-circle img-thumbnail shadow-sm" style="width: 150px; height: 150px; object-fit: cover;"
                         src="@(Common.GetImagePath(Model.Avatar) == "/AppData/no-image.png" ? "/assets/img/user.png" : Model.Avatar)" />
                    <div class="upload-button">
                        <i class="fa fa-arrow-circle-up" aria-hidden="true"></i>
                    </div>
                    <input class="file-upload" type="file" name="AvatarFile" accept="image/*" hidden />
                </div>

                <h5 class="mt-3 fw-bold">@(!string.IsNullOrEmpty(Model.Name) ? Model.Name : "Chưa cập nhật")</h5>

                
            </div>

            <div class="col-md-8">
                <h6 class="fw-bold mb-3 row border-bottom pb-2">Cập nhật thông tin cá nhân</h6>
                <div class="mb-3 row">
                    <label class="form-label fw-bold">Họ tên:</label>
                    <input type="text" name="Name" class="form-control" value="@Model.Name" required />
                </div>

                <div class="mb-3 row">
                    <label class="form-label fw-bold">Email:</label>
                    <input type="email" name="Email" class="form-control" value="@Model.Email" required />
                </div>

                <div class="mb-3 row">
                    <label class="form-label fw-bold">Số điện thoại:</label>
                    <input type="text" id="Phone" name="Phone" class="form-control" value="@Model.Phone" required />
                    <div class="invalid-feedback" id="PhoneError">
                        Vui lòng nhập đầy đủ thông tin.
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="form-label fw-bold">Địa chỉ:</label>
                    <input type="text" name="Local" class="form-control" value="@Model.Local" required />
                </div>

            </div>
        </div>

        <div class="text-center">
            <a type="button" data-toggle='modal' data-sizeModal='modal-lg' href="@Url.Action("ThongTin","TrangChu",new {area=""})" class="btn btn-secondary me-2" >
                <i class="fas fa-times me-1"></i> Quay lại
            </a>

            <button type="submit" class="btn btn-success">
                <i class="fas fa-save me-1"></i> Lưu
            </button>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        var readURL = function (input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $(".profile-pic").attr("src", e.target.result);
                };

                reader.readAsDataURL(input.files[0]);
            }
        };

        $(".file-upload").on("change", function () {
            readURL(this);
        });

        $(".upload-button").on("click", function () {
            $(".file-upload").click();
        });
    });
    $(document).ready(function () {
        // kiểm tra Số điện thoại
        var phoneInput = $('#Phone');
        var errorDiv = $('#PhoneError');
        // Chỉ cho phép nhâp số
        phoneInput.on('input', function () {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
        phoneInput.on('blur', function () {
            var value = this.value.trim();
            var isValid = /^\d{10,11}$/.test(value);

            if (!isValid) {
                phoneInput.addClass('is-invalid');
                errorDiv.text("Vui lòng nhập số điện thoại hợp lệ (10 đến 11 chữ số).").show();
            } else {
                phoneInput.removeClass('is-invalid');
                errorDiv.text("").hide();
            }
        });
    });
</script>
