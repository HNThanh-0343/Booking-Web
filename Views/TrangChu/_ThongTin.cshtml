@model WEBSITE_TRAVELBOOKING.Models.SysGuest
@using WEBSITE_TRAVELBOOKING.Helper

<div class="modal-header bg-primary text-white d-flex justify-content-center position-relative rounded-top">
    <h5 class="modal-title fw-bold mb-0" id="exampleModalLabel">
        Thông tin @(!string.IsNullOrEmpty(Model.Name) ? Model.Name : "Khách hàng")
    </h5>
    <button type="button" class="close position-absolute" style="right: 20px; top: 45px; transform: translateY(-50%);" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true" class="text-white">&times;</span>
    </button>
</div>

<div class="modal-body p-4">
    <div class="row mb-4">
        <!-- Avatar -->
        <div class="col-md-4 text-center">
            <img src="@(Common.GetImagePath(Model.Avatar) == "/AppData/no-image.png" ? "/assets/img/user.png" : Model.Avatar)"
                 alt="Avatar" class="rounded-circle img-thumbnail shadow-sm"
                 style="width: 150px; height: 150px; object-fit: cover;">

            <h5 class="mt-3 fw-bold">@(!string.IsNullOrEmpty(Model.Name) ? Model.Name : "Chưa cập nhật")</h5>
            <p class="text-muted mb-1">@(!string.IsNullOrEmpty(Model.Email) ? Model.Email : "Chưa cập nhật")</p>
        </div>

        <!-- Info -->
        <div class="col-md-8">
            <h6 class="fw-bold mb-3 border-bottom pb-2">Thông tin cá nhân</h6>

            <div class="row mb-3">
                <div class="col-4 fw-bold text-secondary">Họ tên:</div>
                <div class="col-8">@(!string.IsNullOrEmpty(Model.Name) ? Model.Name : Html.Raw("<span class='text-secondary'>Cập nhật họ tên</span>"))</div>
            </div>

            <div class="row mb-3">
                <div class="col-4 fw-bold text-secondary">Email:</div>
                <div class="col-8">
                    @(!string.IsNullOrEmpty(Model.Email) ? Model.Email : Html.Raw("<span class='text-secondary'>Cập nhật email</span>"))
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-4 fw-bold text-secondary">Số điện thoại:</div>
                    <div class="col-8">
                    @(!string.IsNullOrEmpty(Model.Phone) ? Model.Phone : Html.Raw("<span class='text-secondary'>Cập nhật số điện thoại</span>"))
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-4 fw-bold text-secondary">Địa chỉ:</div>
                        <div class="col-8">
                    @(!string.IsNullOrEmpty(Model.Local) ? Model.Local : Html.Raw("<span class='text-secondary'>Cập nhật địa chỉ</span>"))
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <button type="button" class="btn btn-secondary me-2" data-dismiss="modal">
            <i class="fas fa-times me-1"></i> Đóng
        </button>

        <a type="button" class="btn btn-success" data-toggle='modal' data-sizeModal='modal-lg' href="@Url.Action("CapNhatThongTin","TrangChu",new {area=""})">
            <i class="fas fa-edit me-1" ></i> Cập nhật
        </a>
    </div>
</div>

