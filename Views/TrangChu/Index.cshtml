		</div>
	</div>
</div>

<!-- ========== Hiển thị phần xem ks nào được lên đầu ========== -->
@if (LocalStorages != null && LocalStorages.Any())
{
	<div class="destinantion-block destinantion-v1 border-bottom border-color-8">
		<div class="container space-bottom-1 space-top-lg-3">
			<div class="w-md-80 w-lg-50 text-center mx-md-auto mb-5 mt-4">
				<h2 class="section-title text-black font-size-30  mb-0" style="font-weight: bold">Bạn còn quan tâm đến những chỗ nghỉ này?</h2>
			</div>
			<div class="tab-content cardHome">
				<div class="tab-pane active  fade show">
					@{
						<div class="row">

							@foreach (var itemPost in LocalStorages)
							{
								var image = Common.GetImagePath(itemPost.Images) == "/AppData/no-image.png" ? "/AppData/BaiViet/BaiVietMacDinh.jpg" : itemPost.Images;
								<div class="col-6 col-md-6 col-lg-4 col-xl-3 mb-3 mb-md-4 pb-1">
									<div class="card mb-1 transition-3d-hover shadow-hover-2 tab-card h-100">
										<div class="position-relative mb-1">
											<a href="@itemPost.Url" class="d-block">
												<img class="card-img-top imgHotel" src="@image" alt="img">
											</a>
										</div>
										<div class="card-body pl-2 pr-2 py-0">
											<div class="starts">
												<div class="d-inline-flex align-items-center font-size-17 text-lh-1 text-primary letter-spacing-3">
													<div class="green-lighter mr-2">
														@for (int i = 0; i < 5; i++)
														{
															if (i < @itemPost.NumberStar)
															{
																<small class="fas fa-star"></small>
															}
															else
															{
																<small class="far fa-star"></small>
															}
														}
													</div>
												</div>
											</div>
											@{
												if (itemPost.Name.Length > 40)
												{
													<a href="@itemPost.Url" class="card-title NameHotel text-dark fw-bold tooltip-container mb-0 titleCard_cus text-one_line" data-tooltip="@itemPost.Name">
														<div class="NameCustom">
															@itemPost.Name
														</div>
													</a>
												}
												else
												{
													<a href="@itemPost.Url" class="card-title NameHotel text-dark fw-bold titleCard_cus text-one_line  mb-0">
														@itemPost.Name
													</a>
												}
											}
											<div class="priceCard">
												<small class="color_card__Price">Từ:</small>
												<span class="ViewPrice">
													@itemPost.Price.ToString("N0") VNĐ
													@*@(string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0}", itemPost.Price))*@
												</span>
											</div>
											<div class="d-flex bd-highlight font-size-14 text-gray-1 color_card__Price">
												<div class="bd-highlight">
													<i class="icon flaticon-pin-1 font-size-15 mr-1"></i>
												</div>

												@{
													if (itemPost.Local.Length > 40)
													{
														<div class="flex-grow-1 bd-highlight tooltip-container" data-tooltip="@itemPost.Local">
															<div class="localCustom text-one_line">
																@itemPost.Local
															</div>
														</div>
													}
													else
													{
														<div class="localCustom text-one_line">
															@itemPost.Local
														</div>
													}
												}
											</div>
										</div>
									</div>
								</div>
							}
						</div>
					}
				</div>
			</div>
		</div>
	</div>
}


<!-- Destinantion v1 -->
<div class="destinantion-block destinantion-v1 border-bottom border-color-8 ">
	<div class="container space-bottom-1 @(LocalStorages.Any() ? "space-top-lg-1":"space-top-lg-3" ) diemdenhangdau">
		<div class="w-md-80 w-lg-50 text-center mx-md-auto mb-5 mt-4">
			<h2 class="section-title text-black font-size-30  mb-0" style="font-weight: bold">Điểm đến hàng đầu</h2>
		</div>

		<!-- Hàng 1: 2 ảnh -->
		<div class="row mb-1">
			@foreach (var tp in Model.Take(2))
			{
				var anh = Common.GetImagePath(tp.Image);
				<div class="col-md-6 mb-3 mb-md-4">
					<a href="@Url.Action("Index","KhachSan",new { area = "", location = tp.Name })" class="d-block text-decoration-none">
						<div class="min-height-300 bg-img-hero rounded-border p-5 gradient-overlay-half-bg-gradient transition-3d-hover shadow-hover-2 border-0"
							 style="border-radius: 10px; overflow: hidden; background-image: url(@anh); ">
							<div class="w-100 d-flex justify-content-between mb-2">
								<div class="position-relative">
									<span class="destination text-white font-weight-bold font-size-21 pb-3 mb-3 text-lh-1 d-block">
										@tp.Name
										@* <img src="/AppData/Contry/AnhLaCo.jpg" style="block-size:20px;" alt="img" /> *@
									</span>
								</div>
							</div>
						</div>
					</a>
				</div>
			}

		</div>

		<!-- Hàng 2: 3 ảnh -->
		<div class="row mb-1">
			@foreach (var tp in Model.Skip(2).Take(3))
			{
				<div class="col-md-4 mb-3 mb-md-4">
					<a href="@Url.Action("Index","KhachSan",new { area = "", location = tp.Name })" class="d-block text-decoration-none">
						<div class="min-height-300 bg-img-hero rounded-border p-5 gradient-overlay-half-bg-gradient transition-3d-hover shadow-hover-2 border-0"
							 style="border-radius: 10px; overflow: hidden; background-image: url(@tp.Image);">
							<div class="w-100 d-flex justify-content-between mb-2">
								<div class="position-relative">
									<span class="destination text-white font-weight-bold font-size-21 pb-3 mb-3 text-lh-1 d-block">
										@tp.Name
										@* <img src="/AppData/Contry/AnhLaCo.jpg" style="block-size:20px;" alt="img"></img> *@
									</span>
								</div>
							</div>
						</div>
					</a>
				</div>
			}

		</div>

	</div>
</div>

